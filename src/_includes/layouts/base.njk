{%- set assetHash = global.random() -%}
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  {# <link rel="me" href="https://mastodon.social/@erikvorhes"> #}
  <link rel="stylesheet" href="https://fonts.typotheque.com/{{ site.fontLicenseKey }}.css">
  <link rel="alternate" type="application/atom+xml" title="{{ site.title }}" href="{{ site.feed.path | url }}">
  <link rel="alternate" type="application/json" title="{{ site.title }}" href="{{ site.jsonFeed.path | url }}">
  <link rel="stylesheet" href="/css/global.css?{{ assetHash }}"
  <link rel="icon" type="image/svg+xml" href="/images/favicon.svg">
  <link rel="icon" type="image/png" href="/images/favicon.png">
  {% include "partials/global/meta-info.njk" %}
  {% block head %}
  {% endblock head %}
  <script>
    if (window.location.host !== '{{ site.domain }}') {
      window.goatcounter = {no_onload: true};
    }
  </script>
  <script data-goatcounter="https://drasty.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
  <script async src="/js/focusHash.js?{{ assetHash }}"></script>
</head>
<body>
  {% include "partials/global/site-header.njk" %}
  {% block content %}
  {% endblock content %}
  {% include "partials/global/site-footer.njk" %}
  {% block footer %}
  {% endblock footer %}
  <script>
    if ('serviceWorker' in navigator) {
      window.addEventListener('load', function registerServiceWorker() {
        navigator.serviceWorker.register('/service-worker.js');
      });
    }
  </script>
</body>
</html>
